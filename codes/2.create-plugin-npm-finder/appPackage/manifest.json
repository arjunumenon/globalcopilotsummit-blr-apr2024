{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Arjun Menon",
        "websiteUrl": "https://arjunumenon.com",
        "privacyUrl": "https://arjunumenon.com",
        "termsOfUseUrl": "https://arjunumenon.com"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "NPM Finder-${{APP_NAME_SUFFIX}}",
        "full": "Teams App for searching and finding NPM Packages"
    },
    "description": {
        "short": "This is the Plugin which finds NPM Packages.",
        "full": "NPM Finder is the ultimate tool finding the NPM Packages from the NPM Repository. With its intuitive interface and powerful features, you'll be able to easily find your NPM Packages by name."
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "searchQuery",
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "description": "Test command to run query",
                    "title": "Search",
                    "type": "query",
                    "parameters": [
                        {
                            "name": "searchQuery",
                            "title": "Search Query",
                            "description": "Your search query",
                            "inputType": "text"
                        }
                    ]
                }
            ]
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}